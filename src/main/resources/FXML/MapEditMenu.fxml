<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../CSS/style1.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MapEditMenu">
    <children>
        <AnchorPane fx:id="sidePane" layoutX="991.0" prefHeight="720.0" prefWidth="288.0" styleClass="mapToolBar">
            <children>
                <Button focusTraversable="false" layoutX="118.0" layoutY="640.0" mnemonicParsing="false"
                        onMouseClicked="#back" prefHeight="39.0" prefWidth="52.0" styleClass="menu-button" text="Back"/>
                <AnchorPane fx:id="texturesPane" layoutX="4.0" prefHeight="415.0" prefWidth="280.0">
                    <children>
                        <HBox alignment="CENTER" layoutX="67.0" layoutY="43.0" spacing="8.0">
                            <children>
                                <Button focusTraversable="false" mnemonicParsing="false" onMouseClicked="#showSandBox"
                                        text="Sand"/>
                                <Button focusTraversable="false" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                                        onMouseClicked="#showWaterBox" text="Water"/>
                                <Button focusTraversable="false" layoutX="62.0" layoutY="10.0" mnemonicParsing="false"
                                        onMouseClicked="#showTreeBox" text="Tree"/>
                            </children>
                        </HBox>
                        <TilePane fx:id="sandBox" layoutX="5.0" layoutY="98.0" prefHeight="240.0" prefTileHeight="60.0"
                                  prefTileWidth="60.0" prefWidth="270.0" visible="false"/>
                        <TilePane fx:id="waterBox" layoutX="5.0" layoutY="98.0" prefHeight="240.0" prefTileHeight="60.0"
                                  prefTileWidth="60.0" prefWidth="270.0" visible="false"/>
                        <TilePane fx:id="treeBox" layoutX="5.0" layoutY="98.0" prefHeight="240.0" prefTileHeight="60.0"
                                  prefTileWidth="60.0" prefWidth="270.0" visible="false"/>
                        <Label fx:id="textureNameLabel" layoutX="98.0" layoutY="363.0" prefHeight="16.0" prefWidth="3.0"
                               visible="false">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                        <Label layoutX="23.0" layoutY="14.0" text="Select tiles before selecting the texture">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="mapPane" focusTraversable="true" onKeyPressed="#checkShortcut" onMouseDragged="#drag"
                    onMousePressed="#press" prefHeight="720.0" prefWidth="990.0"/>
    </children>
</AnchorPane>
