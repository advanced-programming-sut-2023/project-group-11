                                      prefWidth="200.0" spacing="10.0">
                                    <TextField fx:id="newNickname" prefWidth="200.0" promptText="new nickname"/>
                                    <Button mnemonicParsing="false" onAction="#changeNickname" prefWidth="200.0"
