                    <VBox prefHeight="200.0" prefWidth="100.0">
                        <Label prefWidth="120.0" stylesheets="@../CSS/style1.css" text="Nickname">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Label fx:id="nickname" prefWidth="400.0"/>
                    </VBox>
                    <VBox prefHeight="200.0" prefWidth="100.0">
